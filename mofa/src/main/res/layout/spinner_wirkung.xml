    android:padding="3dip">
    <TextView
        android:id="@+id/wirkungText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="9dp">

    </TextView>

    <TextView
        android:id="@+id/periodeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="6dp"
