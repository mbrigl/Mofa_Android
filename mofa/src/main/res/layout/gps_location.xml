<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:id="@+id/ScrollView1">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Spinner
        android:id="@+id/spinner_varquarter_gps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:text="@string/gps_text"
        android:textAppearance="?android:attr/textAppearanceSmall" />
	  <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="@string/gps_point1"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textgpslong1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:text="@string/gps_empty"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textgpslat1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gps_empty"
        android:textAppearance="?android:attr/textAppearanceSmall" />

	<LinearLayout
	    android:id="@+id/LinearLayout02"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" >

    <ImageButton
        android:id="@+id/start_gps1"
        android:layout_width="42dp"
        android:layout_height="37dp"
        android:src="@drawable/ic_gps" />
	<ImageButton
        android:id="@+id/save_gps1"
        android:layout_width="42dp"
        android:layout_height="37dp"
        android:src="@drawable/ic_save" />
	</LinearLayout>
	<View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />
	<TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="@string/gps_point2"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textgpslong2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:text="@string/gps_empty"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textgpslat2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gps_empty"
        android:textAppearance="?android:attr/textAppearanceSmall" />

	<LinearLayout
	    android:id="@+id/LinearLayout03"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" >

    <ImageButton
        android:id="@+id/start_gps2"
        android:layout_width="42dp"
        android:layout_height="37dp"
        android:src="@drawable/ic_gps" />
	<ImageButton
        android:id="@+id/save_gps2"
        android:layout_width="42dp"
        android:layout_height="37dp"
        android:src="@drawable/ic_save" />
	</LinearLayout>
</LinearLayout>
</ScrollView>