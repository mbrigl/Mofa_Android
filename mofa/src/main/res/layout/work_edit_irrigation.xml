<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">
            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/ic_sun" />
            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/ic_part_cloud" />
            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/ic_clouds" />

        </TableRow>
        <TableRow
        android:id="@+id/imageRowDesc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">
            <TextView
                android:textStyle="bold"
                android:textSize="20dp"
                android:id = "@+id/txtImageDesc"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                />

        </TableRow>
        <TableRow
            android:layout_marginTop="15dp"
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="1">
            <TextView
                android:id="@+id/txtDurationDesc"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="@string/irrigduration"/>
            <TextView
                android:textStyle="bold"
                android:textSize="20dp"
                android:id = "@+id/txtDurationValue"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:layout_gravity="right"
            />
        </TableRow>
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

            <SeekBar
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:id="@+id/seekBarDuration"

                android:layout_marginTop="15dp"/>
        </TableRow>

        <TableRow
            android:layout_marginTop="15dp"
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="1">
            <TextView
                android:id="@+id/txtIrrAmountDesc"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="@string/irrigamount"/>
            <TextView
                android:textStyle="bold"
                android:textSize="20dp"
                android:id = "@+id/txtIrrAmountValue"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:layout_gravity="right"
                />
        </TableRow>
        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

            <SeekBar
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:id="@+id/seekBarAmount"

                android:layout_marginTop="15dp"/>
        </TableRow>
    <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <TextView
            android:textStyle="bold"
            android:textSize="30sp"
            android:id = "@+id/txtIrrTotal"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:background="@color/lightgreen"
            android:gravity="center" />

    </TableRow>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/work_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="@string/work_save_button" >
        </Button>
    </LinearLayout>



</LinearLayout>