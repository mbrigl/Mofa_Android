<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   
	
		
		<TableLayout
			android:id="@+id/TableLayout01"
			
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:stretchColumns="*"
			android:layout_marginLeft="40dp">
			<TableRow
				android:id="@+id/TableRow01"
				android:background="@color/lightgreen"
				android:gravity="left">
				<TextView
        		android:id="@+id/workpesticideLabel"
        		android:layout_width="wrap_content"
        		android:layout_height="fill_parent"
        		android:textSize="14sp"
        		android:layout_span="2" >
    			</TextView>
			</TableRow>
			<TableRow
				android:id="@+id/TableRow02"
				android:gravity="left"
				>
				<TextView
				android:id="@+id/workpesticideDoseLabel"
        		android:layout_height="fill_parent"
        		
        		android:textSize="12sp" ></TextView>
				<TextView
				android:id="@+id/workpesticideAmountLabel"
				
        		android:layout_height="fill_parent"
        		android:textSize="12sp" ></TextView>
			</TableRow>
			
		</TableLayout>
	
    
      
	 <ImageView
       android:id="@+id/delete_pesticide_icon"
       android:layout_width="wrap_content"
       android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        
       android:src="@drawable/ic_action_delete_small" />
	<!-- android:layout_alignTop="@+id/workpesticideLabel" -->
</RelativeLayout>