<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="it.schmid.android.mofa.search.WorkerOverviewActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fromDate"
        android:id="@+id/textView4"
        android:layout_toLeftOf="@+id/editTextFromDate"
        android:layout_alignBottom="@+id/editTextFromDate"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/toDate"
        android:id="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@+id/editTextToDate" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editTextFromDate"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:inputType="date" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editTextToDate"
        android:layout_below="@+id/editTextFromDate"
        android:layout_alignLeft="@+id/editTextFromDate"
        android:inputType="date" />

    <ListView
        android:id="@+id/workerhourslist"
        android:layout_marginTop="24dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/editTextToDate"
        android:drawSelectorOnTop="false" />
</RelativeLayout>
